<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.julia.lw_6.MainActivity">
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="X"
        android:id="@+id/textView"
        android:textSize="50sp"
        android:gravity="center_horizontal"
        android:textAlignment="gravity"
        android:layout_marginStart="60dp" android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" android:layout_marginLeft="60dp"/>
    <TextView android:layout_width="50dp" android:layout_height="50dp" android:text="Y" android:id="@+id/textView2"
        android:textSize="50sp" android:gravity="center_horizontal" android:textAlignment="gravity"
        android:layout_marginLeft="50dp"
        android:layout_alignParentTop="true" android:layout_alignStart="@+id/editText2"
        android:layout_marginStart="50dp"/>

    <EditText
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText"
        android:textSize="50dp"
        android:layout_below="@+id/textView" android:layout_alignParentStart="false"
        android:phoneNumber="true" android:elegantTextHeight="false"
        android:editable="false" android:gravity="center_horizontal" android:inputType="number"
        android:textAlignment="gravity" android:background="@drawable/ofor"/>
    <EditText android:layout_width="164dp" android:layout_height="wrap_content" android:ems="10"
        android:id="@+id/editText2" android:textSize="50dp"
        android:phoneNumber="true" android:elegantTextHeight="false"
        android:editable="false" android:gravity="center_horizontal" android:inputType="number"
        android:textAlignment="gravity" android:background="@drawable/ofor"
        android:layout_alignTop="@+id/editText" android:layout_alignParentEnd="true"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText3"
        android:textSize="50dp"
        android:layout_below="@+id/textView3" android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" android:textAlignment="gravity" android:enabled="false"
        android:background="@drawable/ofor"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="X xor Y"
        android:id="@+id/button6"
        android:layout_below="@+id/button5" android:layout_alignStart="@+id/button5"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/button7" android:layout_below="@+id/textView4" android:layout_alignParentStart="true"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Y"
        android:id="@+id/button8" android:layout_alignBottom="@+id/button7" android:layout_toEndOf="@+id/button7"
        android:layout_marginLeft="5dp"/>

    <TextView android:layout_width="fill_parent" android:layout_height="60dp" android:text="Результат" android:id="@+id/textView3"
        android:textSize="40dp" android:gravity="center_horizontal" android:textAlignment="gravity"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />

    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="X-Y" android:id="@+id/button2"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/editText3"
        android:layout_toEndOf="@+id/button" />

    <TextView android:layout_width="fill_parent" android:layout_height="30dp" android:text="В двоичный код"
        android:id="@+id/textView4" android:textSize="20dp" android:gravity="center_horizontal"
        android:textAlignment="gravity"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editText2" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Расчитать"
        android:id="@+id/button9"
        android:textSize="25dp"
        android:layout_below="@+id/button7"
        android:layout_alignParentStart="true" />

    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="X*Y" android:id="@+id/button3"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/editText3"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X mod Y"
        android:id="@+id/button5"
        android:layout_below="@+id/editText3"
        android:layout_alignParentEnd="true" />

    <Button style="?android:attr/buttonStyleSmall" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="X/Y" android:id="@+id/button4"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/editText3"
        android:layout_toEndOf="@+id/button3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X+Y"
        android:id="@+id/button"
        android:layout_alignBaseline="@+id/editText3"
        android:layout_alignBottom="@+id/editText3"
        android:layout_toEndOf="@+id/button7" />

</RelativeLayout>